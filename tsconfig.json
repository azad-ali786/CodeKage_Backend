{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["es2020"],
    "module": "CommonJS",
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "target": "es2021",
    "types": ["node"],
    "outDir": "dist"
  },
  "include": ["**/*.ts", "**/*.tsx","**/*.js"],
  "exclude": ["node_modules", "dist"]
}
